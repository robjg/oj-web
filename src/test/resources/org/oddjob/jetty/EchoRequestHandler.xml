<oddjob id="this">
  <job>
    <sequential>
      <jobs>
        <properties>
          <values>
            <file file="." key="basedir" />
          </values>
        </properties>
        <web:server xmlns:web="oddjob:web" id="server"
          port="${server.port}">
          <handlers>
            <web:files baseDir="${basedir}/src/main/webapp/"
              directoriesListed="true" minMemoryMappedContentLength="-1">
              <welcomeFiles>
                <value value="index.html" />
              </welcomeFiles>
            </web:files>
            <bean class="org.oddjob.jetty.EchoRequestHandler" />
          </handlers>
        </web:server>
      </jobs>
    </sequential>
  </job>
</oddjob>