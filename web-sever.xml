<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<oddjob id="oddjob">
    <job>
        <sequential>
            <jobs>
                <properties>
                    <values>
                        <file file="${oddjob.dir}/../oj-reactjs/dist" key="webBundle"/>
                    </values>
                </properties>
                <jmx:server id="jmxServer" root="${serverJobs}" xmlns:jmx="http://rgordon.co.uk/oddjob/jmx"/>
                <web:server port="8080" xmlns:web="oddjob:web">
                    <handlers>
                        <web:resource base="${webBundle}">
                            <welcomeFiles>
                                <list>
                                    <values>
                                        <value value="index.html"/>
                                    </values>
                                </list>
                            </welcomeFiles>
                        </web:resource>
                        <web:remote-handler>
                            <jmxServer>
                                <value value="${jmxServer}"/>
                            </jmxServer>
                        </web:remote-handler>
                    </handlers>
                </web:server>
                <oddjob file="${oddjob.dir}/server-jobs.xml" id="serverJobs"/>
            </jobs>
        </sequential>
    </job>
</oddjob>
